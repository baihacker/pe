    (ENABLE_LIBBF || ENABLE_FLINT || ENABLE_GMP || ENABLE_MPFR)
#pragma comment(lib, "libgcc_s.a")
#pragma comment(lib, "libgcc.a")
#pragma comment(lib, "legacy_stdio_definitions.lib")
#endif

