// Y = X[2s:2e]
// s(i) = (Y[1]*x+Y[0])(Y[3]x+Y[2])...(Y[2i+1]x+Y[2i])
// return s(0) + s(2) + s(3) + ... + s(n-1)
template <typename T>
SL REQUIRES((is_native_integer<T>::value)) RETURN(vector<T>)
poly_batch_mul_acc(const vector<T>& X, int s, int e, uint64 mod) {
  const int n = e - s;
