#ifndef PE_FLOAT128_
#define PE_FLOAT128_

#include "pe_base"
#include "pe_int"

#if PE_HAS_FLOAT128 && !defined(COMPILER_CLANG)
namespace pe {
namespace internal {
SL std::string ToStringFloat128(__float128 f, const char* format_string,
                                int dig = 20) {
  char buff[256];
  const int buff_size = sizeof(buff);
  int n = quadmath_snprintf(buff, buff_size, format_string, dig, f);
  if (n < buff_size) {
    return buff;
  }
  n = quadmath_snprintf(NULL, 0, format_string, dig, f);
  if (n <= -1) {
    return "";
  }
  char* str = static_cast<char*>(malloc(n + 1));
  std::string result;
  if (str) {
    quadmath_snprintf(str, n + 1, format_string, dig, f);
    result = str;
  }
  free(str);
  return result;
}
}  // namespace internal
}  // namespace pe

SL std::string ToString(__float128 f, int dig = 20) {
  return pe::internal::ToStringFloat128(f, "%#.*Qe", dig);
}

SL std::string ToStringF(__float128 f, int dig = 20) {
  return pe::internal::ToStringFloat128(f, "%#.*Qf", dig);
}

SL std::string to_string(__float128 x, int dig = 20) { return ToString(x); }

SL __float128 Abs(__float128 f) { return fabsq(f); }

SL __float128 FAbs(__float128 f) { return fabsq(f); }

SL __float128 Power(__float128 f, int p) {
  return powq(f, static_cast<__float128>(p));
}
SL __float128 Ceil(__float128 f) { return ceilq(f); }

SL __float128 Floor(__float128 f) { return floorq(f); }

SL __float128 Trunc(__float128 f) { return truncq(f); }

#if defined(__STRICT_ANSI__)
SL __float128 abs(__float128 f) { return fabsq(f); }
#endif

SL __float128 fabs(__float128 f) { return fabsq(f); }

SL __float128 ceil(__float128 f) { return ceilq(f); }

SL __float128 floor(__float128 f) { return floorq(f); }

SL __float128 trunc(__float128 f) { return truncq(f); }

namespace pe {
using ::Abs;
using ::abs;
using ::Ceil;
using ::ceil;
using ::FAbs;
using ::fabs;
using ::Floor;
using ::floor;
using ::to_string;
using ::ToString;
using ::Trunc;
using ::trunc;
}  // namespace pe

namespace std {
SL std::ostream& operator<<(std::ostream& o, __float128 f) {
  return o << pe::ToString(f, 20);
}
}  // namespace std
#endif

namespace pe {
SL float Abs(const float n) { return std::fabs(n); }

SL double Abs(const double n) { return std::fabs(n); }

SL long double Abs(const long double n) { return std::fabs(n); }

SL float FAbs(const float n) { return std::fabs(n); }

SL double FAbs(const double n) { return std::fabs(n); }

SL long double FAbs(const long double n) { return std::fabs(n); }

namespace internal {
template <typename T>
SL std::string ToStringFloat(T f, const char* format_string, int dig = 20) {
  char buff[256];
  const int buff_size = sizeof(buff);
  int n = snprintf(buff, buff_size, format_string, dig, f);
  if (n < buff_size) {
    return buff;
  }
  n = snprintf(NULL, 0, format_string, dig, f);
  if (n <= -1) {
    return "";
  }
  char* str = static_cast<char*>(malloc(n + 1));
  std::string result;
  if (str) {
    snprintf(str, n + 1, format_string, dig, f);
    result = str;
  }
  free(str);
  return result;
}
}  // namespace internal

SL std::string ToString(float f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*e", dig);
}

SL std::string ToString(double f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*e", dig);
}

SL std::string ToString(long double f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*Le", dig);
}

SL std::string ToStringF(float f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*f", dig);
}

SL std::string ToStringF(double f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*f", dig);
}

SL std::string ToStringF(long double f, int dig = 20) {
  return internal::ToStringFloat<float>(f, "%#.*Lf", dig);
}

#if PE_HAS_CPP20
template <class T>
concept PeFloatUtil = requires(T v) {
  requires PeComparable<T>;
  FAbs(v);
  fabs(v);
  Abs(v);
  abs(v);
  Ceil(v);
  ceil(v);
  Floor(v);
  floor(v);
  Trunc(v);
  trunc(v);

  ToString(v);
};
static_assert(PeFloatUtil<float>);
static_assert(PeFloatUtil<double>);
static_assert(PeFloatUtil<long double>);
#if PE_HAS_FLOAT128 && !defined(COMPILER_CLANG)
static_assert(PeFloatUtil<__float128>);
#endif
#endif
}  // namespace pe

#endif
